<Page x:Class="Fabric_Desktop.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fabric_Desktop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <WrapPanel HorizontalAlignment="Center" Height="150"  VerticalAlignment="Center" Width="200" Orientation="Vertical">
            <Label Content="Логин" Width="100"/>
            <TextBox Name="tbLogin" Width="200" />
            <Label Content="Пароль" Width="100"/>
            <TextBox Name="tbPassword" Width="200"/>
            <Button Name="BtnSignIn" Width="100" Height="25" Content="Войти" Click="BtnSignIn_Click"/>
        </WrapPanel>

        
            



    </Grid>
</Page>
