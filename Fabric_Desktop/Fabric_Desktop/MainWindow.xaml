<Window x:Class="Fabric_Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fabric_Desktop"
        mc:Ignorable="d"
        Title="Fabric Desktop" Height="650" Width="800" MinHeight="550" MinWidth="800"
        Icon="/Resources/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Image Source="/Resources/logo.png" Grid.Row="0" HorizontalAlignment="Right"/>
        <Label Name="PageName" Content="Header" FontWeight="Bold" FontSize="35" HorizontalAlignment="Center" FontFamily="Comic Sans MS" Foreground="Black"/>
        <Button Name="BtnBack" Content="Назад" HorizontalAlignment="Left" Width="80" Height="40" VerticalAlignment="Center" Background="#FF498C51" Click="BtnBack_Click"/>
        <Grid Grid.Row="2" Background="#FF76E383"/>
        <Grid Grid.Row="0" Background="#FF76E383" Panel.ZIndex="-2"/>
        <Frame Grid.Row="1" Name="MainFrame" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
