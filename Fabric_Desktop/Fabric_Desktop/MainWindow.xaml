<Window x:Class="Fabric_Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fabric_Desktop"
        mc:Ignorable="d"
        Title="ООО Ткани" Height="450" Width="800" MinWidth="800" MinHeight="450" Icon="Resources/icon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Click="BtnBack_Click" Content="Выход" Grid.Row="0" HorizontalAlignment="Left" Name="BtnBack" Width="70" Height="30"/>
        <Label Foreground="Black" Name="LbHeader" Content="Header" HorizontalAlignment="Center" FontWeight="Bold" FontSize="30"/>
        <Image Source="Resources/logo.png" HorizontalAlignment="Right" Name="ImgLogo"/>
        <Label Foreground="Black" Content="ФИО" HorizontalAlignment="Right" Visibility="Hidden" FontSize="15" Name="LbUser"/>
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered" Grid.Row="1"/>
        <Grid Grid.Row="0" Background="#FF76E383" Panel.ZIndex="-2"/>
    </Grid>
</Window>
